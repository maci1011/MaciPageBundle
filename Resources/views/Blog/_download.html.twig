
<tr>
<td class="item-preview-wrapper">
	<a href="{{ path('maci_media_get', {'path': item.media.path}) }}" target="_blank" title="{{ 'download'|matla('Download') }}">
		{% if item.media.path %}
		<img class="item-preview" src="{{ asset(item.media.webPreview|imagine_filter('maci_page_thumb')) }}" alt="{{ item.media.title }} - {{ item.media.description|striptags }}">
		{% else %}
		<img class="item-preview default" src="{{ asset('/images/defaults/media-icon.png') }}" alt="{{ post.title }}" />
		{% endif %}
	</a>
</td>
<td class="item-content">
	{% if item.name %}
	<a class="item-link" href="{{ path('maci_media_get', {'path': item.media.path}) }}" target="_blank" title="{{ 'download'|matla('Download') }}">
		<span class="item-title">{{ item.name }}</span>
	</a>
	{% endif %}
	{% if item.description %}
	<p class="item-description">{{ item.description }}</p>
	{% endif %}
</td>
<td class="item-actions">
	<a class="item-action icon" href="{{ path('maci_media_get', {'path': item.media.path}) }}" target="_blank" title="{{ 'download'|matla('Download') }}">
		<i class="fas fa-file-download"></i>
	</a>
</td>
</tr>
