
<tr>
<td class="item-preview">
	{% if item.preview %}
	<img class="item-preview" src="{{ asset(item.preview.webPath|imagine_filter('maci_blog_thumb')) }}" alt="{{ item.preview }} - {{ item.preview.description|striptags }}">
	{% else %}
	<img class="item-preview default" src="{{ asset('/images/defaults/media-icon.png') }}" alt="{{ post.title }}" />
	{% endif %}
</td>
<td class="item-content">
	{% if item.name|length %}
	<h3 class="item-title">{{ item.name }}</h3>
	{% endif %}
	{% if item.description|length %}
	<p class="item-description">{{ item.description }}</p>
	{% endif %}
</td>
</tr>
