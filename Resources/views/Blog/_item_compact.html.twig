
<tr>
<td class="item-preview-wrapper">
	<a href="{{ path('maci_blog_show', { 'path': post.path, '_locale': post.locale }) }}" title="{{ post.title }}">
		{% if post.preview %}
		<img class="item-preview" src="{{ asset(post.preview.webPath | imagine_filter('maci_page_thumb')) }}" alt="{{ post.title }}"/>
		{% else %}
		<img class="item-preview default" src="{{ asset('/images/defaults/media-icon.png' | imagine_filter('maci_page_thumb')) }}" alt="{{ post.title }}"/>
		{% endif %}
	</a>
</td>
<td class="item-content">
	<a class="item-link" href="{{ path('maci_blog_show', { 'path': post.path, '_locale': post.locale }) }}" title="{{ post.title }}">
		<span class="item-title">{{ post.title }}</span>
	</a>
	{% if post.subtitle %}
	<p class="item-subtitle">{{ post.subtitle }}</p>
	{% endif %}
	<p class="item-info">
		<span class="item-date">
			{% include "@MaciPage/Blog/_date_compact.html.twig" %}
		</span>
		{% if post.authors|length %}
		{% if post.authors|length == 1 %}
		<a class="item-author ml-2" href="{{ path('maci_blog_author', { 'path': post.author.path, '_locale': post.author.locale }) }}">
			<i class="fas fa-user-alt"></i>
			{{ post.author.name }}
		</a>
		{% else %}
		<i class="fas fa-users ml-2"></i>
		{% for editor in post.authors %}
		<a class="item-author" href="{{ path('maci_blog_author', { 'path': editor.path, '_locale': editor.locale }) }}">
			{{ editor.name }}
		</a>{% if not loop.last %}<span class="nav-author-separator">,</span>{% endif %}
		{% endfor %}
		{% endif %}
		{% endif %}
		{% if post.tags|length %}
		<i class="ml-2"></i>
		{% for tag in post.tags %}
		<a class="item-tag" href="{{ path('maci_blog_tag', { 'path': tag.path }) }}">
			<i class="tag-icon fas fa-hashtag"></i>{{ tag }}
		</a>
		{% endfor %}
		{% endif %}
	</p>
</td>
</tr>
