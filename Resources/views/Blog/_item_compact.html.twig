
<article class="blog-post post-item compact">
<div class="blog-post-wrapper flex">

{% set post_link = path('maci_blog_show', { 'path': post.path, '_locale': post.locale }) %}

<header class="blog-post-header">

	<a href="{{ post_link }}">
		<h1 class="post-title">{{ post.title }}</h1>
	</a>

	{% if post.subtitle %}
	<h2 class="post-subtitle">{{ post.subtitle }}</h2>
	{% endif %}

</header>

<footer class="blog-post-footer flex">

{% include "@MaciPage/Blog/_post_collapsed_nav.html.twig" %}

</footer>

</div>
</article>
