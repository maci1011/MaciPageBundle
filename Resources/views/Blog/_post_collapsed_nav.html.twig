
<nav class="post-collapsed-nav navbar navbar-expand-md flex-column">
	<ul class="navbar-nav mr-auto">

		{% if post.isPubblished and post.pubblished %}
		<li class="nav-item">
			<p class="post-date post-nav-val navbar-text px-2">
				{% if post.isUpdated %}
				<i class="fas fa-calendar-edit"></i>
				{% else %}
				<i class="fas fa-calendar-day"></i>
				{% endif %}
				{{ post.pubblished|date('d/m/Y') }}
			</p>
		</li>
		{% endif %}

		{% if post.editors|length %}
		<li class="nav-item first">
			<p class="post-author post-nav-val navbar-text px-2">
				{% if post.editors|length == 1 %}
				<i class="fas fa-user-alt"></i>
				{% else %}
				<i class="fas fa-users"></i>
				{% endif %}
				{% for editor in post.editors %}
				{{ editor.name ~ (loop.last ? '' : ', ') }}
				{% endfor %}
			</p>
		</li>
		{% else %}
		<li class="nav-item">
			<p class="post-author post-nav-val navbar-text px-2">
				<i class="fas fa-user-alt"></i>
				{{ company_title }}
			</p>
		</li>
		{% endif %}

		{% for tag in post.tags %}
		<li class="nav-item{% if loop.last %} last{% endif %}">
			<a class="nav-link post-tag post-nav-val px-2" href="{{ path('maci_blog_tag', { 'path': tag.path }) }}">
				<i class="fas fa-hashtag"></i>{{ tag }}
			</a>
		</li>
		{% endfor %}

	</ul>
</nav>
