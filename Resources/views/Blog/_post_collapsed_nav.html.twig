
<nav class="post-collapsed-nav navbar navbar-expand flex-column px-0">
	<ul class="navbar-nav mr-auto">

		{% if post.isPubblished and post.pubblished %}
		<li class="nav-item">
			<p class="post-date post-nav-val navbar-text px-2">
				{{ post.pubblished|date('d/m/Y') }}
			</p>
		</li>
		{% endif %}

		{% if post.editors|length %}
		<li class="nav-item first">
			<p class="post-author post-nav-val navbar-text px-2">
				{% for editor in post.editors %}
				{{ editor.name ~ (loop.last ? '' : ', ') }}
				{% endfor %}
			</p>
		</li>
		{% else %}
		<li class="nav-item">
			<p class="navbar-text">
				<span class="post-author post-nav-label">{{ 'blog.author'|matra('Author') }}:</span>
				<span class="post-author post-nav-val">{{ company_title }}</span>
			</p>
		</li>
		{% endif %}

		{% for tag in post.tags %}
		<li class="nav-item{% if loop.last %} last{% endif %}">
			<a class="nav-link post-tag post-nav-val" href="{{ path('maci_blog_tag', { 'path': tag.path }) }}">{{ tag }}</a>
		</li>
		{% endfor %}

	</ul>
</nav>
