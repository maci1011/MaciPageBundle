
<nav class="post-dates-nav navbar navbar-expand flex-column">
	<ul class="navbar-nav mr-auto">

		{% if post.isPubblished and post.pubblished %}
		<li class="nav-item">
			<span class="navbar-text">{{ 'blog.post.published' | matra('Published') }}: {{ post.pubblished|date('d/m/Y') }}</span>
		</li>
		{% elseif post.created %}
		<li class="nav-item">
			<span class="navbar-text">{{ 'blog.post.created' | matra('Created') }}: {{ post.created|date('d/m/Y') }}</span>
		</li>
		{% endif %}

		{% if post.isUpdated %}
		<li class="nav-item">
			<span class="navbar-text">{{ 'blog.post.last_update' | matra('Last Update') }}: {{ post.updated|date('d/m/Y') }}</span>
		</li>
		{% endif %}

	</ul>
</nav>
