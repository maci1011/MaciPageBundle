
<div class="post-dates-nav navbar navbar-expand">
	<ul class="navbar-nav flex-column mr-auto">

		{% if post.isUpdated %}
		<li class="nav-item">
			<p class="navbar-text">
				<span class="post-date post-nav-label">{{ 'blog.post.last_update' | matra('Last Update') }}:</span>
				<span class="post-date post-nav-val">{{ post.updated|date('d/m/Y') }}</span>
			</p>
		</li>

		{% elseif post.pubblished %}
		<li class="nav-item">
			<p class="navbar-text">
				<span class="post-date post-nav-label">{{ 'blog.post.published' | matra('Published') }}:</span>
				<span class="post-date post-nav-val">{{ post.pubblished|date('d/m/Y') }}</span>
			</p>
		</li>

		{% elseif post.created %}
		<li class="nav-item">
			<p class="navbar-text">
				<span class="post-date post-nav-label">{{ 'blog.post.created' | matra('Created') }}:</span>
				<span class="post-date post-nav-val">{{ post.created|date('d/m/Y') }}</span>
			</p>
		</li>
		{% endif %}

	</ul>
</div>
