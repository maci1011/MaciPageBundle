
<nav>

	<ul class="post-footer-nav nav navbar-nav">

		<li>
			<span class="navbar-text">{{ 'blog.post.published' | matra('Published') }}: {{ post.created|date('d/m/Y') }}</span>
		</li>

		{% if post.tags|length %}

		{% for tag in post.tags %}

		<li>
			<a href="{{ path('maci_blog_tag', { 'id': tag.id }) }}">{{ tag }}</a>
		</li>

		{% endfor %}

		{% endif %}

	</ul>
</nav>
