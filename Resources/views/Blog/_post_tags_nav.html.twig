
{% if post.tags|length %}
<nav class="post-tags-nav navbar navbar-expand flex-column">
	<ul class="navbar-nav mr-auto">

		<li class="nav-item first">
			<span class="navbar-text post-tag post-nav-label">{{ 'blog.post.tags' | matra('Tag') }}:</span>
		</li>

		{% for tag in post.tags %}
		<li class="nav-item{% if loop.last %} last{% endif %}">
			<a class="nav-link post-tag post-nav-val" href="{{ path('maci_blog_tag', { 'path': tag.path }) }}">{{ tag }}</a>
		</li>
		{% endfor %}

	</ul>
</nav>
{% endif %}
