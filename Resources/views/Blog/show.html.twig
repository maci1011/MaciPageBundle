
{% extends "@MaciPage/Layout/blog.html.twig" %}


{% block title %}

{% if post.metaTitle %}
{{ post.metaTitle }}
{% else %}
{{ post.title }} - {{ parent() }}
{% endif %}

{% endblock title %}

{% block description %}

{% if post.metaDescription %}
<meta name="description" content="{{ post.metaDescription }}" />
{% else %}
<meta name="description" content="{{ post.header|striptags  }}" />
{% endif %}

{% endblock description %}


{% block pathBar %}
<nav class="breadcrumb-wrapper {{ col_class }}">
<ol class="breadcrumb">

    <li>
    	<a href="{{ path('maci_blog') }}">
    		{{ 'page.blog' | matme('Blog') }}
    	</a>
    </li>

    <li class="active">
    	{{ 'blog.post' | matme('Post') }}
    </li>

    <li class="active">
    	{{ post }}
    </li>

</ol>
</nav>
{% endblock pathBar %}


{% block content %}

{% include "@MaciPage/Blog/_article.html.twig" with { 'post': post } %}

{% endblock content %}
