

<div class="page">


{% if page.slider %}

<section class="page_slider row">

	{% include "MaciMediaBundle:Default:_slider.html.twig" with {'album': page.slider}  %}

</section>

{% endif %}


{% if page.slides and page.slides.images|length %}

<section class="page_slides page_container row">

	{% include "MaciMediaBundle:Default:_slides.html.twig" with {'album': page.slides}  %}

</section>

{% endif %}


<header class="page_header page_container row">

	<h1 class="page_title">
		{{ page.title }}
	</h1>

	<div class="page_spacer"></div>

	{% if page.subtitle %}
	<h2 class="page_subtitle">
		{{ page.subtitle }}
	</h2>
	{% endif %}

	{% if page.header %}
	<div class="page_header-content">
		{{ page.header|raw }}
	</div>
	{% endif %}

</header>



{% if page.content %}

<section class="page_content page_container row">

	{{ page.content|raw }}

</section>

{% endif %}


{% if page.text %}

<section class="page_text row">

	{{ page.text|raw }}

</section>

{% endif %}


{% if page.category and page.category.currentItems|length %}

<section class="page_products page_container row">

	{% include "MaciProductBundle:Default:_category_list.html.twig" with { 'category': page.category }  %}

</section>

{% endif %}


{% if page.album and page.album.images|length %}

<section class="page_album page_container row">

	{% include "MaciMediaBundle:Default:_album_media_list.html.twig" with { 'album': page.album }  %}

</section>

{% endif %}


{% if page.gallery and page.gallery.images|length %}

<section class="page_gallery page_container row">

	{% include "MaciMediaBundle:Default:_album_media_list.html.twig" with { 'album': page.gallery }  %}

</section>

{% endif %}


{% if page.tag and page.tag.posts|length %}

<section class="page_posts page_container row">

	{% include "MaciBlogBundle:Default:_list.html.twig" with { 'list': page.tag.posts }  %}

</section>

{% endif %}


{% if page.map %}

<section class="page_map row">

	{{ page.map|raw }}

</section>

{% endif %}


{% if page.footer %}

<section class="page_footer row">

	{{ page.footer|raw }}

</section>

{% endif %}



</div>

