
{% extends "MaciPageBundle::layout.html.twig" %}


{% block bodyTag %}<body id="bodyContacts">{% endblock %}


{% block maciadmin %}

<a class="btn btn-success ma-form" href="{{ path('maci_admin_entity_form', {'entity': 'page', 'id': page.id}) }}">Edit Page</a>

<a class="btn btn-primary ma-form" href="{{ path('maci_admin_entity_new', {'entity': 'page'}) }}">New Page</a>

{% endblock %}


{% block title %}

{% if page.metaTitle %}
{{ page.metaTitle }}
{% else %}
{{ page.title }} - {{ parent() }}
{% endif %}

{% endblock %}

{% block description %}

{% if page.metaDescription %}
<meta name="description" content="{{ page.metaDescription }}" />
{% else %}
<meta name="description" content="{{ page.description|length > 180 ? page.description|slice(0, 163) : page.description  }}" />
{% endif %}

{% endblock %}


{% block pathBar %}
<nav>
<ul class="nav navbar-nav">

    <li>
    	<a href="{{ path('homepage') }}">
    		Home
			<span class="glyphicon glyphicon-chevron-right"></span>
    	</a>
    </li>

	{% for parentItem in page.parentsList %}

	<li class="product-category-parent">
		<a href="{{ path('maci_page', {'path': parentItem.path}) }}">
			{{ parentItem }}
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>
	</li>

	{% endfor %}

    <li>
    	<a href="{{ path('maci_page', {'path': page.path}) }}">
    		{{ page }}
    	</a>
    </li>

</ul>
</nav>
{% endblock %}



{% block container %}


<div class="page-container contacts-page">


{% include "MaciPageBundle:Default:_page_slider.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_slides.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_header.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_content.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_contacts.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_media.html.twig" with { 'page': page } %}

{% include "MaciPageBundle:Default:_page_footer.html.twig" with { 'page': page } %}


</div>


{% endblock %}

