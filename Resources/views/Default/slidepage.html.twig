
{% extends "MaciPageBundle::layout.html.twig" %}


{% block bodyTag %}<body id="bodySlidepage">{% endblock %}


{% block maciadmin %}

{% include 'MaciAdminBundle:Modal:edit.html.twig' with {'entity': 'page', 'item': page, 'label': 'Page'} %}

{% include 'MaciAdminBundle:Modal:new.html.twig' with {'entity': 'page', 'label': 'Page'} %}

{% endblock %}


{% block title %}

{% if page.metaTitle %}
{{ page.metaTitle }}
{% else %}
{{ page.title }} - {{ parent() }}
{% endif %}

{% endblock %}

{% block description %}

{% if page.metaDescription %}
<meta name="description" content="{{ page.metaDescription }}" />
{% else %}
<meta name="description" content="{{ page.description|length > 180 ? page.description|slice(0, 163) : page.description  }}" />
{% endif %}

{% endblock %}


{% block pathBar %}
<nav>
<ul class="nav navbar-nav">

    <li>
    	<a href="{{ path('homepage') }}">
    		Home
			<span class="glyphicon glyphicon-chevron-right"></span>
    	</a>
    </li>

	{% for parentItem in page.parentsList %}

	<li class="product-category-parent">
		<a href="{{ path('maci_page', {'path': parentItem.path}) }}">
			{{ parentItem }}
			<span class="glyphicon glyphicon-chevron-right"></span>
		</a>
	</li>

	{% endfor %}

    <li>
    	<a href="{{ path('maci_page', {'path': page.path}) }}">
    		{{ page }}
    	</a>
    </li>

</ul>
</nav>
{% endblock %}


{% block container %}

{% include "MaciPageBundle:Default:_page_media.html.twig" with { 'page': page } %}

{% endblock %}
