
<table class="main wrapper">
<tbody>
<tr>
	<td class="order-status">

		{% if intro_message is defined and intro_message|length %}
		{% if subscriber is defined %}
		<h4>{{ intro_message|replace({'%name%': subscriber.header}) }}</h4>
		{% else %}
		<h4>{{ intro_message }}</h4>
		{% endif %}
		{% elseif subscriber is defined %}
		<h4>{{ 'mail.subscriber-incipit'|matra('Dear %name%,')|replace({'%name%': subscriber.header}) }}</h4>
		{% else %}
		<h4>{{ 'mail.incipit'|matra('Dear Customer,') }}</h4>
		{% endif %}

		{% if message is defined and message|length %}
		<p class="text">{{ message }}</p>
		{% endif %}

	</td>
</tr>
</tbody>
</table>
