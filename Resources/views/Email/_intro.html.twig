
<table class="main">
<tbody>
<tr>
	<td class="order-status">

		{% if subscriber is defined %}
		<h4>{{ 'mail.subscriber-incipit'|matra('Dear %name%')|replace({'%name%': subscriber.name}) }},</h4>
		{% else %}
		<h4>{{ 'mail.incipit'|matra('Dear Customer') }},</h4>
		{% endif %}

		{% if message is defined and message|length %}
		<p class="text">{{ message }}</p>
		{% endif %}

	</td>
</tr>
</tbody>
</table>
