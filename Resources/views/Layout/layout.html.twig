
{% extends "@MaciPage/base.html.twig" %}


{% block body %}

<div id="main">

    {% block navbarTop %}

    <div id="navbarTop" class="navbar navbar-fixed-top navbar-default" role="navigation">

        {% block cookieMessage %}

        {% if not app.session.get('cookie-message', false) %}
        <div id="cookieMessage" class="container">

            <nav><ul class="nav navbar-nav">

                <li><p class="navbar-text">{{ 'cookie-message' | matra(('By using ' ~ app.request.host ~ ', you agree to our use of cookies to enhance your experience.')) }}</p></li>
                <li><a href="{{ path('maci_page', {'path':'cookies'}) }}">{{ 'menu.cookie-message-link' | matra('Read') }}</a></li>
                <li><a class="set-cookie" href="{{ path('maci_set_cookie', {'cookie': 'cookie-message'}) }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> {{ 'form.close' | matra('Close') }}</a></li>

            </ul></nav>

        </div>
        {% endif %}

        {% endblock %}

        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- <img id="navbarTopLogo" src="{{ asset('/images/cmm/logo.png') }}" alt="{{ company_title }}" /> -->
                 <a href="/" title="{{ company_title }}">
                     <span id="navbarBrand" class="navbar-brand">
                       {{ company_title }}
                    </span>
                </a>
            </div>
            <div class="collapse navbar-collapse">

                <nav>{{ knp_menu_render('language', {'currentClass': 'active'}) }}</nav>
                <nav>{{ knp_menu_render('user_cart', {'currentClass': 'active'}) }}</nav>
                <nav>{{ knp_menu_render('user', {'currentClass': 'active'}) }}</nav>
                <nav>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a id="searchLink" name="search[submit]" href="{{ path('maci_page', {'path': 'search'}) }}">
                                <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            </a>
                        </li>
                    </ul>
                </nav>
                <nav>{{ knp_menu_render('main', {'currentClass': 'active'}) }}</nav>

            </div>
        </div>

    </div>

    {% endblock navbarTop %}


    {% block header %}

    <header id="header"></header>

    {% endblock header %}


    <div id="mainContainer" class="clearfix">

    {% block container %}

    {% block menuContainerTag %}
    <div id="menuContainer" class="col-xs-12 col-sm-3 col-md-2">
    {% endblock menuContainerTag %}

        {% block leftMenu %}

            <nav>{{ knp_menu_render('left', {'currentClass': 'active'}) }}</nav>

        {% endblock %}

    </div>

    {% block contentContainerTag %}
    <div id="contentContainer" class="col-xs-12 col-sm-9 col-md-10">
    {% endblock contentContainerTag %}

        <div id="pathBar">

            {% block pathBar %}{% endblock pathBar %}

        </div>

        <div id="pageContainer">

        {% block content %}{% endblock %}

        </div>

    </div>

    {% endblock container %}

    </div>



    <footer id="footer">

    {% block footer %}


    {% if is_granted("ROLE_ADMIN") %}

    <div id="maciadmin" class="container-fluid">

        {% block maciadmin %}{% endblock %}

    </div>

    {% endif %}


    <div class="container-fluid">

    <div class="navbar">

        <nav>

            <!--
                 Social Icons
                 
                 Use anything from here: http://fortawesome.github.io/Font-Awesome/cheatsheet/)
            -->
                <ul class="nav navbar-nav">
                    <li><a href="http://www.facebook.com/" target="_blank"><span>Facebook</span></a></li>
                    <li><a href="http://plus.google.com/" target="_blank"><span>Google Plus</span></a></li>
                </ul>

            <!-- Menu -->
                <ul class="nav navbar-nav navbar-right">
                    <li><span class="navbar-text">{{ company_title }} | {{ company_address }} {{ company_cccs }} | <abbr title="Phone">Tel.</abbr> {{ company_phone }}</span></li>
                    <li><a href="mailto:{{ contact_email }}"><span>{{ contact_email }}</span></a></li>
                    <li><a href="{{ path('maci_page', {'path':'privacy'}) }}">{{ 'terms.privacy_and_cookies' | matme('Privacy & Cookies') }}</a></li>
                    {#}<li><a href="{{ path('maci_page', {'path':'saleterms'}) }}">{{ 'terms.terms_and_conditions' | matme('Terms & Conditions') }}</a></li>{#}
                    <li><a href="{{ path('maci_page', {'path':'customer-service'}) }}">{{ 'terms.customer_service' | matme('Customer Service') }}</a></li>
                    {% if is_granted('ROLE_USER') %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('maci_admin') }}">Administration</a></li>
                    {% else %}
                    <li><a href="{{ path('maci_user') }}">@{{ app.user.username }}</a></li>
                    {% endif %}
                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                    <li><a href="{{ path('maci_user_login') }}">Login</a></li>
                    {% endif %}
                </ul>

        </nav>

    </div>

    </div>

    {% endblock footer %}

    </footer>

</div>



{% block startPopUp %}

{% if not app.session.get('start-popup', false) %}
<section id="startPopUp" class="popup">

    <div class="popup-container">

        <h1>{{ 'layout.title'|matra('Title') }}</h1>

        <h2>{{ 'layout.subtitle'|matra('Subtitle') }}</h2>

        <p>{{ 'popup.start.text'|matra('Text') }}</p>

        <div>

            <a class="btn btn-danger" href="http://en.wikipedia.org/">
                {{ 'form.deny'|matra('Deny') }}
            </a>

            <a class="btn btn-primary popup-close set-cookie" href="{{ path('maci_set_cookie', {'cookie': 'start-popup'}) }}">
                {{ 'form.ok'|matra('Ok') }}
            </a>

        </div>

    </div>

</section>
{% endif %}

{% endblock %}



{% endblock body %}
