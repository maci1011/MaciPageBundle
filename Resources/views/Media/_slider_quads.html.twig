
{% if slider_filter is not defined %}
{% set slider_filter = 'maci_media_gallery' %}
{% endif %}

<!-- Quads slides mobile -->
<div id="{{ carousel_id }}" class="carousel-quads slide {{ type }} d-md-none" data-ride="carousel" data-pause="false" data-interval="5000">

<!-- Wrapper for slides -->
<div class="carousel-inner quads">

{% for item in list %}

<div class="carousel-item image quads-item {% if loop.first %} active{% endif %}">

	{% include "@MaciPage/Media/_slider_quads_content.html.twig" %}

</div>

{% endfor %}

</div>

</div>



