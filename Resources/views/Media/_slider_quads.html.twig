<div class="carousel-inner quads">

<div class="carousel-item image active">

	<div class="row">

	{% for item in list %}

		<div class="quads col-xs-12 col-sm-6 px-0">

			{% include "@MaciPage/Media/_slider_quads_content.html.twig" %}

		</div>

	{% if ( loop.index % 2 ) == 0 and not loop.last %}

	</div>

{% if ( loop.index % 4 ) == 0 and not loop.last %}

</div>
