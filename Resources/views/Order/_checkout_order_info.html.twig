
<p class="order-info">

	{% if is_granted('ROLE_USER') %}
	{{ 'checkout.info.user'|matra('You are ordering as') }} <span class="username">@{{ app.user.username }}</span>
	{% else %}
	{{ 'checkout.info.email'|matra('You are ordering with this e-mail address') }}: {{ order.mail }} 
	- <a href="{{ path('maci_order_gocheckout', {'edit': true}) }}">{{ 'change-email'|matla('Change Email') }}</a>
	{% endif %}

	|

	{{ 'order.code' | matra('Order Identifier') }}:
	<span class="code">{{ order.code }}</span>

</p>

