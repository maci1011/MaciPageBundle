
{% if payment == 'set' %}

{{ render(controller('MaciPageBundle:Order:cartSetPayment')) }}

{% elseif payment == 'setted' %}

<p class="payment-label">{{ maci_orders.cartPaymentLabel }}</p>

{% set description = ('payment.method.' ~ order.payment ~ '.description')|matra('') %}
{% if description|length %}
<p class="payment-description">{{ description }}</p>
{% endif %}

<p class="payment-cost">
	{% if 0 < order.paymentCost %}
	{{ order.paymentCost | number_format(2, '.', ',') }} &euro;
	{% else %}
	{{ ('order.details.price-free') | matra('Free') }}
	{% endif %}
</p>

<a class="btn btn-success" href="{{ path('maci_order_checkout', {'checkout':'payment'}) }}">
	{{ 'edit' | matla('Edit') }}
</a>

{#% elseif payment == 'toset' %#}
{% endif %}
