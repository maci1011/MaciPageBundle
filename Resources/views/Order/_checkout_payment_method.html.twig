
{% if payment == 'set' %}

<h4>{{ i }} - {{ 'page.checkout.payment_method' | matra('Payment Method') }}</h4>
{{ render(controller('MaciPageBundle:Order:cartSetPayment')) }}

{% elseif payment == 'setted' %}

<h4>{{ i }} - {{ 'page.checkout.payment_method' | matra('Payment Method') }}</h4>
<p>{{ maci_orders.cartPaymentLabel }}</p>
<a class="btn btn-success" href="{{ path('maci_order_checkout', {'id': order.id,'checkout':'payment'}) }}">
	{{ 'form.edit' | matra('Edit') }}
</a>

{% elseif payment == 'toset' %}

<h4>{{ i }} - {{ 'page.checkout.payment_method' | matra('Payment Method') }}</h4>

{% endif %}
