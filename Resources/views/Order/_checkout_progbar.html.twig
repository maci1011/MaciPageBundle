
<ol id="checkoutProgBar" class="navbar-nav">
	<li class="nav-item first">
		<span class="navbar-text progbar-title">
			{{ ('checkout.type' ~ order.checkout)|matra(order.checkoutLabel) }}:
		</span>
	</li>
	{% if billingAddress %}
	<li class="nav-item {{ billingAddress }}">
		<span class="navbar-text">
			<i class="fas fa-wallet"></i>
			{{ 'page.checkout.billing' | matra('Billing') }}
		</span>
	</li>
	{% endif %}
	{% if shippingAddress %}
	<li class="nav-item {{ shippingAddress }}">
		<span class="navbar-text">
			<i class="fas fa-address-card"></i>
			{{ 'page.checkout.shipping' | matra('Shipping') }}
		</span>
	</li>
	{% endif %}
	{% if shipping %}
	<li class="nav-item {{ shipping }}">
		<span class="navbar-text">
			<i class="fas fa-truck"></i>
			{{ 'page.checkout.courier' | matra('Courier') }}
		</span>
	</li>
	{% endif %}
	{% if payment %}
	<li class="nav-item {{ payment }}">
		<span class="navbar-text">
			<i class="fas fa-money-check-alt"></i>
			{{ 'page.checkout.payment' | matra('Payment') }}
		</span>
	</li>
	{% endif %}
	{% if confirm %}
	<li class="nav-item {{ confirm }} last">
		<span class="navbar-text">
			<i class="fas fa-clipboard-check"></i>
			{{ 'page.checkout.confirm' | matra('Confirm') }}
		</span>
	</li>
	{% endif %}
</ol>
