
<div class="checkoutFormWrapper">
<form id="maci_order_billing_address" action="{{ path('maci_order_checkout_set_billing_address') }}" method="post">

	{% if not form.vars.valid %}
	<div class="form-group">
		{{ form_errors(form) }}
	</div>
	{% endif %}

	{{ form_row(form.billing_address) }}

	{{ form_row(form._token) }}

	<div class="form-group text-right">
		<button id="cart_billing_address_save" class="btn btn-primary" type="submit" name="cart_billing_address[save]">
			<i class="fas fa-check-circle"></i>
			{{ 'use_this_address'|matla('Use This Address') }}
		</button>
	</div>

</form>
</div>
