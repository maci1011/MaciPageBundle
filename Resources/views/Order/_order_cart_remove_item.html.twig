
<form class="form-inline order-item-remove-form pl-2" action="{{ path("maci_order_remove_cart_item", {'id': id}) }}" method="post">

	{% if not form.vars.valid %}
	<div class="form-group">
		{{ form_errors(form) }}
	</div>
	{% endif %}

	{{ form_row(form._token) }}

	<button id="cart_remove_item_remove" class="btn-danger btn" name="cart_remove_item[remove]" type="submit">
		<i class="fas fa-trash"></i>
	</button>

</form>
