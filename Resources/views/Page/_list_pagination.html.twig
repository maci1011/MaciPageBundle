
{% if pager is defined and pager.requiresPagination %}

<div class="pagination-container container-fluid">
<nav class="pagination navbar navbar-expand" aria-label="Page navigation">

{% if pager.requiresPagination %}
<ul class="navbar-nav">
	{% if not pager.hasRangeFirst %}
	<li class="nav-item">
		<a class="nav-link btn" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)|merge({ "p": 1 })) }}">
			<i class="fas fa-step-backward"></i>
		</a>
	</li>
	{% endif %}
	{% if pager.hasPrev %}
	<li class="nav-item">
		<a class="nav-link btn" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)|merge({ "p": pager.prev })) }}">
			<i class="fas fa-chevron-left"></i>
		</a>
	</li>
	{% endif %}
	{% for page in pager.getPageRange %}
	<li class="nav-item{% if pager.current(page) %} active{% endif %}">
		<a class="nav-link btn" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)|merge({ "p": page })) }}">
			{{ page }}
		</a>
	</li>
	{% endfor %}
	{% if pager.hasNext %}
	<li class="nav-item">
		<a class="nav-link btn" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)|merge({ "p": pager.next })) }}">
			<i class="fas fa-chevron-right"></i>
		</a>
	</li>
	{% endif %}
	{% if not pager.hasRangeLast %}
	<li class="nav-item">
		<a class="nav-link btn" href="{{ path(app.request.get('_route'), app.request.get('_route_params')|merge(app.request.query.all)|merge({ "p": pager.maxPages })) }}">
			<i class="fas fa-step-forward"></i>
		</a>
	</li>
	{% endif %}
</ul>
{% endif %}

</nav>
</div>

{% endif %}
