{% extends "@MaciPage/Layout/void.html.twig" %}


{% block head %}

<style type="text/css">

@font-face {
	font-family: "Libre Barcode EAN13 Text";
	src: url("http://base.localhost/bundles/macipage/webfonts/ean13.ttf");
}

body, table, tr, td, p, div, span, h4 {
	padding: 0;
	margin: 0;
	text-align: center;
	font-weight: normal;
}

.label {
	width: 58mm;
}

@media print {
	.label {
		page-break-before: always;
	}
	.label.first {
		page-break-before: avoid;
	}
}

.eanWrapper, .ean {
	height: 8mm;
	overflow: hidden;
}

.title {
	text-transform: uppercase;
	font-size: 9pt;
	line-height: 10pt;
}

.title.price {
	font-size: 12pt;
	line-height: 13pt;
	letter-spacing: 0.38px;
}

.title.bold {
	font-weight: bold;
}

.link {
	letter-spacing: 0.43px;
}

</style>

{% endblock %}

{% block body %}

<table class="label{{ index == 0 ? ' first' : '' }}">
<tbody>

{% for item in list %}
<tr>
	<td>
		<h4 class="title">{{ item.code }}</h4>
		<span class="title bold">{{ item.category }}</span><br/>
		<span class="title">{{ item.variantLabel }}</span><br/>
		<span class="title price bold">{{ products[index].priceLabel }} &euro;</span>
	</td>
</tr>
{% endfor %}

</tbody>
</table>

{% endblock %}
