{% extends "@MaciPage/Layout/void.html.twig" %}


{% block head %}

<style type="text/css">

@font-face {
	font-family: "Libre Barcode EAN13 Text";
	src: url("http://base.localhost/bundles/macipage/webfonts/ean13.ttf");
}

body, table, tr, th, td, div, h4 {
	padding: 0;
	margin: 0;
}

body, p, span, h4, th {
	padding: 0;
	margin: 0;
	font-weight: normal;
	text-align: left;
}

h4 {
	display: inline;
}

.label {
	padding: 2px 15px;
	width: 970px;
	padding: 32px;
}

@media print {
	.label {
		page-break-before: always;
	}
	.label.first {
		page-break-before: avoid;
	}
}

th {
	padding: 0 0 6px 0;
}

thead th {
	border-bottom: 1px solid black;
}

.spacer {
	padding: 0 0 12px 0;
}

tbody td {
	border-bottom: 0.5px solid gray;
	height: 16px;
}

.title {
	text-transform: uppercase;
	font-size: 11pt;
	line-height: 16px;
}

th,
.title.bold {
	font-weight: bold;
}

</style>

{% endblock %}

{% block body %}

{% if list|length %}

{% set page = 1 %}
{% set page_limit = 64 %}
{% for code, item in list %}

{% if loop.index0 % page_limit == 0 %}
<table class="label">
<thead>
<tr>
	<th>CODE</th>
	<th>CATEGORY</th>
	<th>VARIANTS</th>
	<th>QUANTITY</th>
	<th>PRICE</th>
</tr>
<tr><td class="spacer"></td></tr>
</thead>
<tbody>
{% endif %}

<tr class="{{ loop.index is even ? 'even' : 'odd' }}">
	<td>
		<h4 class="title">{{ item.code }}</h4>
	</td>
	<td>
		<span class="title"><b>{{ item.category }}</b> - {{ item.variant }}</span>
	</td>
	<td>
		<span class="title">{{ item.variants }}</span>
	</td>
	<td>
		<span class="title bold">{{ item.quantity }}</span>
	</td>
	<td>
		<span class="title">{{ item.price }} &euro;</span>
	</td>
</tr>

{% if loop.index % page_limit == 0 or loop.last %}
</tbody>
<tfoot>
<tr><td class="spacer"></td></tr>
<tr><td class="spacer"></td></tr>
<tr>
	<th>{{ loop.last ? 'I: ' ~ list|length : '&nbsp;' }}</th>
	<th>&nbsp;</th>
	<th>&nbsp;</th>
	<th>{{ loop.last ? 'T: ' ~ qta : '&nbsp;' }}</th>
	<th>p. {{ page }} / {{ (((list|length - 1) / page_limit) + 1)|intval }}</th>
</tr>
</tfoot>
</table>{% set page = page + 1 %}
{% endif %}

{% endfor %}

{% endif %}

{% endblock %}
