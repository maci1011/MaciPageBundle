{% extends "@MaciPage/Layout/void.html.twig" %}

{% block head %}
<style type="text/css">
{% include "@MaciPage/Report/report.css" %}
</style>
{% endblock %}

{% block body %}
{% if list|length %}

{% set page = 1 %}
{% set page_limit = 64 %}

{# BEGIN ROW #}
{% for row in list %}

{# Header #}
{% if loop.index0 % page_limit == 0 %}
<table class="page">
{% if headers|length %}
<thead>
<tr>
	<th>#</th>
	{% for id, header in headers %}
	<th>
		<p class="cell-text">{{ header }}</p>
	</th>
	{% endfor %}
</tr>
</thead>
{% endif %}
<tbody>
<tr><td class="spacer"></td></tr>
{% endif %}

<tr class="row {{ loop.index is even ? 'even' : 'odd' }}">
	<td class="cell">
		<span class="row-index">{{ loop.index }}</span>
	</td>
	{% for id, cell in row %}
	<td class="cell">
		<p class="cell-text">{{ cell }}</p>
	</td>
	{% endfor %}
</tr>

{% if loop.last and amounts|length %}
<tr><td class="spacer"></td></tr>
{% for amount in amounts %}
{% if amount == 'spacer' %}
<tr><td class="spacer"></td></tr>
{% else %}
<tr class="amounts">
	<th>#</th>
	{% for cell in amount %}
	<th>
		<p class="cell-text"><strong>{{ cell }}</strong></p>
	</th>
	{% endfor %}
</tr>
{% endif %}
{% endfor %}
{% endif %}

{# Footer #}
{% if loop.last or loop.index0 % page_limit == page_limit - 1 %}
<tr><td class="spacer"></td></tr>
<tfoot>
<tr>
	{% for footer in footers %}
	<th>{{ footer }}</th>
	{% endfor %}
	<th>Page: {{ page }} / {{ (list|length / page_limit)|intval + 1 }}</th>
</tr>
</tfoot>
</tbody>
</table>
{% set page = page + 1 %}
{% endif %}

{# END ROW #}
{% endfor %}

{% endif %}
{% endblock %}
