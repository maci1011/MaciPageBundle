
{% extends "::base.html.twig" %}


{% block stylesheets %}

    {{ parent() }}

    {% if is_granted("ROLE_ADMIN") %}

    <link rel="stylesheet" href="{{ asset('/bundles/maciadmin/css/font-awesome.css') }}" />
    <link rel="stylesheet" href="{{ asset('/bundles/maciadmin/css/jquery-ui.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('/bundles/maciadmin/css/maci.admin.css') }}" />

    {% endif %}

{% endblock %}


{% block javascripts %}

    {{ parent() }}

    {% if is_granted("ROLE_ADMIN") %}

    <script type="text/javascript" src="{{ asset('/bundles/maciadmin/js/jquery-ui.min.js') }}" ></script>
    <script type="text/javascript" src="{{ asset('/bundles/maciadmin/js/shortcut.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/macipage/js/bootstrap-dropdown.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/maciadmin/js/ckeditor.js') }}"></script>
    <script type="text/javascript" src="{{ asset('/bundles/maciadmin/js/maci.admin.js') }}" ></script>

    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="http://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

    {% endif %}

{% endblock %}


{% block body %}

<div id="main">

    {% block navbar %}

    <div class="navbar navbar-fixed-top navbar-inverse" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="collapse navbar-collapse">
            <nav>{{ knp_menu_render('language', {'currentClass': 'active'}) }}</nav>
            <nav>{{ knp_menu_render('user', {'currentClass': 'active'}) }}</nav>
        </div>
    </div>
    </div>

    {% endblock %}

    <header id="header">

    {% block header %}

    <div class="row">

        <div class="col-xs-12 col-sm-3">
            <a href="{{ path('homepage') }}">
                <h1>{{ 'layout.title'|matra('Mah!') }}</h1>
            </a>
            <h2>{{ 'layout.subtitle'|matra('A Base Project') }}</h2>
        </div>

        <div id="mainMenu" class="col-xs-12 col-sm-9">
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a id="searchLink" class="navbar-btn btn btn-primary" name="search[submit]" href="{{ path('maci_page', {'path': 'search'}) }}">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                            Search
                        </a>
                    </li>
                </ul>
                {{ knp_menu_render('main', {'currentClass': 'active'}) }}
            </nav>
        </div>

    </div>

    {% endblock %}

    <div id="pathBar" class="row">

        {% block pathBar %}{% endblock %}

    </div>

    </header>


    {% if is_granted("ROLE_ADMIN") %}

    <div id="maciadmin">
        <div class="btn-group">

            {% block maciadmin %}{% endblock %}

        </div>
    </div>

    {% endif %}


    <div id="mainContainer">

    {% block container %}

        <div class="col-sm-3 col-md-2">
        <div id="menuContainer">

            {% block leftMenu %}

                <nav>{{ knp_menu_render('left', {'currentClass': 'active'}) }}</nav>

            {% endblock %}

        </div>
        </div>
        <div class="col-sm-9 col-md-10">
        <div id="pageContainer">

            {% block content %}{% endblock %}

        </div>
        </div>

    {% endblock container %}

    </div>

    <footer id="footer">

    {% block footer %}

        <p>{{ 'layout.footer'|matra('Footer') }}</p>

    {% endblock footer %}

    </footer>

</div>


{% block startPopUp %}

{% if not app.session.get('start-popup', false) %}
<sectio id="startPopUp" class="popup">

    <div class="popup-container">

        <h1>{{ 'layout.title'|matra('Title') }}</h1>

        <h2>{{ 'layout.subtitle'|matra('Subtitle') }}</h2>

        <p>{{ 'popup.start.text'|matra('Text') }}</p>

        <div>

            <a class="btn btn-danger" href="http://en.wikipedia.org/">
                {{ 'form.deny'|matra('Deny') }}
            </a>

            <a class="btn btn-primary popup-close" href="{{ path('maci_start_popup') }}">
                {{ 'form.ok'|matra('Ok') }}
            </a>

        </div>

    </div>

</sectio>
{% endif %}

{% endblock %}


{% endblock body %}
