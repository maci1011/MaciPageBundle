
{% extends "::base.html.twig" %}


{% if is_granted("ROLE_ADMIN") %}


{% block stylesheets %}

{{ parent() }}

<link rel="stylesheet" type="text/css" href="{{ asset('/bundles/maciadmin/css/maci.admin.css') }}" />

{% endblock %}


{% block javascripts %}

{{ parent() }}

<script type="text/javascript" src="{{ asset('/js/jquery-ui.min.js') }}" ></script>
<script type="text/javascript" src="{{ asset('/bundles/maciadmin/js/maci.admin.js') }}" ></script>

{% endblock %}


{% endif %}


{% block body %}

<div id="main">

	<header class="navbar navbar-fixed-top navbar-inverse" role="navigation">

	{% block header %}

	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="#">Mah!</a>
		</div>
		<div class="collapse navbar-collapse">
			<nav>

				{{ knp_menu_render('main') }}

			</nav>
			<ul class="nav navbar-nav navbar-right">

				{% block route_translation %}

				{% if app.request.locale != 'it' %}

				<li><a class="userMenuLink" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'it'})) }}">
					IT
				</a></li>

				{% endif %}

				{% if app.request.locale != 'en' %}

				<li><a class="userMenuLink" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">
					EN
				</a></li>

				{% endif %}

				{% endblock %}

				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

				{% if is_granted("ROLE_ADMIN") %}

				<li><a class="userMenuLink" href="{{ path('maci_admin_homepage') }}">
					Admin
				</a></li>

				{% endif %}

				<li><a class="userMenuLink" href="{{ path('maci_user_homepage') }}">
					@{{ app.user }}
				</a></li>

				<li><a href="{{ path('maci_order_cart') }}">Cart</a></li>

				<li><a href="{{ path('maci_order') }}">Orders</a></li>

					<li><a class="userMenuLink" href="{{ path('fos_user_security_logout') }}">
				{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
				</a></li>

				{% else %}

				<li><a class="userMenuLink" href="{{ path('fos_user_security_login') }}">
					{{ 'layout.login'|trans({}, 'FOSUserBundle') }}
				</a></li>

				<li><a class="userMenuLink" href="{{ path('fos_user_registration_register') }}">
					{{ 'layout.register'|trans({}, 'FOSUserBundle') }}
				</a></li>

				{% endif %}

			</ul>
		</div>
	</div>

	{% endblock header %}

	</header>


	{% if is_granted("ROLE_ADMIN") %}

	<div id="maciadmin" class="container">
		<div class="btn-group">

			{% block maciadmin %}{% endblock %}

		</div>
	</div>

	{% endif %}


    <div>

	{% block container %}

		<div id="row">
			<div class="col-md-2">
			<div class="row">
			<div id="_menuContainer">

				{% block leftMenu %}

					{#{ render(controller('MaciPageBundle:Default:nav')) }#}

				{% endblock %}

			</div>
			</div>
			</div>
			<div class="col-md-10">
			<div class="row">
			<div id="_pageContainer">

				{% block content %}{% endblock %}

			</div>
			</div>
			</div>
		</div>

	{% endblock container %}

    </div>

    <footer id="footer" class="container">

	{% block footer %}

    	<p>Footer</p>

	{% endblock footer %}

    </footer>

</div>

{% endblock body %}
